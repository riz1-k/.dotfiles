{
	"vim_mode": true,
	"assistant": {
		"button": false,
		"version": "2"
	},
	"base_keymap": "VSCode",
	"buffer_font_family": "Geist Mono",
	"buffer_font_size": 16,
	"buffer_font_weight": 600,
	"buffer_line_height": {
		"custom": 1.8
	},
	"buffer_font_fallbacks": ["JetBrainsMono Nerd Font"],
	"code_actions_on_format": {
		"source.fixAll.eslint": true,
		"source.organizeImports": true
	},
	"chat_panel": {
		"button": false
	},
	"cursor_blink": false,
	"cursor_shape": "block",
	"diagnostics": {
		"include_warnings": true
	},
	"extend_comment_on_newline": false,
	"features": {
		"inline_completion_provider": "supermaven"
	},
	"format_on_save": "prettier",
	"formatter": "auto",
	"git": {
		"git_gutter": "tracked_files",
		"gutter_debounce": 0,
		"inline_blame": {
			"enabled": false
		}
	},
	"hard_tabs": true,
	"inlay_hints": { "enabled": false },
	"relative_line_numbers": true,
	"restore_on_startup": "none",
	"scrollbar": { "show": "never" },
	"tab_bar": {
		"show": false
	},
	"theme": {
		"mode": "system",
		"light": "One Light",
		"dark": "One Dark"
	},
	"toolbar": {
		"quick_actions": false
	},
	"terminal": {
		"default_height": 1000
	},
	"ui_font_family": "Geist Mono",
	"ui_font_size": 16,
	"when_closing_with_no_tabs": "keep_window_open",
	"vim": {
		"use_system_clipboard": "always"
	}
}
